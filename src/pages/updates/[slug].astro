---
import BaseLayout from "../../layouts/BaseLayout.astro";
import { getCollection } from "astro:content";

export async function getStaticPaths() {
  const updates = await getCollection("updates");

  return updates.map((u) => ({
    params: { slug: u.slug },
    props: { update: u },
  }));
}

const { update } = Astro.props;
const { title, date, tag, summary } = update.data;
---

<BaseLayout title={`${title} | Updates | The Capstone Program`}>
  <section class="mx-auto max-w-3xl px-4 py-16">
    <a href="/updates" class="text-sm font-semibold text-capBlue hover:underline">
      ‚Üê Back to Updates
    </a>

    <div class="mt-6 rounded-3xl border border-black/10 bg-white p-8 shadow-sm">
      <div class="flex items-center justify-between gap-4">
        <p class="text-xs font-semibold tracking-wider text-capText/60 uppercase">
          {tag ?? "Update"}
        </p>
        <p class="text-xs font-medium text-capText/50">
          {date ? new Date(date).toLocaleDateString("en-GB", {
            day: "2-digit",
            month: "short",
            year: "numeric",
          }) : ""}
        </p>
      </div>

      <h1 class="mt-4 text-3xl font-semibold">{title}</h1>

      {summary ? (
        <p class="mt-3 text-sm text-capText/70">{summary}</p>
      ) : null}

      <div class="prose prose-lg mt-8 max-w-none">
        <Content content={update} />
      </div>
    </div>
  </section>
</BaseLayout>