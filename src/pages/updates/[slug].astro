---
import BaseLayout from "../../layouts/BaseLayout.astro";
import { getCollection } from "astro:content";

export async function getStaticPaths() {
  const updates = await getCollection("updates");

  return updates.map((entry) => ({
    params: { slug: entry.slug },
    props: { entry },
  }));
}

const { entry } = Astro.props;

const dateText = entry.data?.date
  ? new Date(entry.data.date).toLocaleDateString("en-GB", {
      day: "2-digit",
      month: "short",
      year: "numeric",
    })
  : "";

const tagText = entry.data?.tag ?? "";
---

<BaseLayout title={`${entry.data.title} | Updates | The Capstone Program`}>
  <!-- HERO -->
  <section class="relative bg-capBlack text-white overflow-hidden">
    <!-- premium blue glow -->
    <div class="pointer-events-none absolute -top-40 -left-40 h-[520px] w-[520px] rounded-full bg-capBlue/25 blur-3xl"></div>
    <div class="pointer-events-none absolute -bottom-44 -right-40 h-[560px] w-[560px] rounded-full bg-capBlue/15 blur-3xl"></div>

    <div class="mx-auto max-w-6xl px-4 pt-14 pb-14 md:pt-20 md:pb-16">
      <a
        href="/updates/"
        class="inline-flex items-center gap-2 text-sm font-semibold text-white/80 hover:text-white"
      >
        <span aria-hidden="true">‚Üê</span>
        Back to Updates
      </a>

      <div class="mt-10 max-w-4xl">
        <p class="text-[11px] font-semibold tracking-[0.22em] text-white/60 uppercase">
          Update
        </p>

        <h1 class="mt-4 text-4xl font-semibold leading-tight md:text-6xl md:leading-tight">
          {entry.data.title}
        </h1>

        <div class="mt-6 flex flex-wrap items-center gap-3 text-sm text-white/70">
          {dateText && (
            <span class="inline-flex items-center gap-2">
              <span class="h-1.5 w-1.5 rounded-full bg-white/40"></span>
              {dateText}
            </span>
          )}

          {tagText && (
            <span class="rounded-full border border-white/15 bg-white/10 px-3 py-1 text-xs font-semibold text-white">
              {tagText}
            </span>
          )}
        </div>

        {entry.data.summary && (
          <p class="mt-8 text-base md:text-lg text-white/80 leading-relaxed">
            {entry.data.summary}
          </p>
        )}
      </div>
    </div>

    <!-- bottom fade into white -->
    <div class="pointer-events-none absolute bottom-0 left-0 right-0 h-14 bg-gradient-to-b from-transparent to-white"></div>
  </section>

  <!-- CONTENT -->
  <section class="mx-auto max-w-6xl px-4 py-14 md:py-20">
    <div class="grid gap-10 md:grid-cols-[1fr_320px]">
      <!-- Main article -->
      <article class="rounded-[28px] border border-black/10 bg-white p-6 md:p-10 shadow-sm">
        <div class="prose prose-lg max-w-none prose-headings:text-capBlack prose-p:text-black/80 prose-a:text-capBlue">
          <div set:html={entry.body} />
        </div>
      </article>

      <!-- Sidebar -->
      <aside class="space-y-6">
        <!-- Meta card -->
        <div class="rounded-[28px] border border-black/10 bg-white p-6 shadow-sm">
          <p class="text-xs font-semibold tracking-[0.22em] text-capText/50 uppercase">
            Details
          </p>

          <div class="mt-4 space-y-3 text-sm text-black/70">
            {dateText && (
              <div class="flex items-center justify-between gap-4">
                <span class="font-semibold text-capBlack">Date</span>
                <span>{dateText}</span>
              </div>
            )}

            {tagText && (
              <div class="flex items-center justify-between gap-4">
                <span class="font-semibold text-capBlack">Tag</span>
                <span class="rounded-full bg-black/5 px-3 py-1 text-xs font-semibold text-capBlack">
                  {tagText}
                </span>
              </div>
            )}
          </div>

          <a
            href="/updates/"
            class="mt-6 inline-flex w-full items-center justify-center rounded-2xl bg-capBlue px-5 py-3 text-sm font-semibold text-white shadow hover:opacity-95"
          >
            View all updates
          </a>
        </div>

        <!-- CTA card -->
        <div class="rounded-[28px] bg-capBlack text-white p-6 shadow-sm relative overflow-hidden">
          <div class="pointer-events-none absolute -top-20 -right-16 h-[260px] w-[260px] rounded-full bg-capBlue/20 blur-3xl"></div>

          <p class="text-xs font-semibold tracking-[0.22em] text-white/60 uppercase">
            Stay in the loop
          </p>

          <h3 class="mt-4 text-xl font-semibold leading-snug">
            Want updates before anyone else?
          </h3>

          <p class="mt-2 text-sm text-white/75 leading-relaxed">
            Join the waitlist to receive cohort announcements and community updates.
          </p>

          <a
            href="/apply"
            class="mt-6 inline-flex w-full items-center justify-center rounded-2xl bg-capBlue px-5 py-3 text-sm font-semibold text-white shadow hover:opacity-95"
          >
            Join Waitlist
          </a>
        </div>
      </aside>
    </div>
  </section>
</BaseLayout>