---
import BaseLayout from "../../layouts/BaseLayout.astro";
import { getSettings } from "../../lib/settings";
import { getCollection } from "astro:content";

const s = getSettings();

const updates = await getCollection("updates");
const sorted = updates
  .filter((u) => u.data?.date)
  .sort((a, b) => new Date(b.data.date).getTime() - new Date(a.data.date).getTime());

const formatDate = (d) =>
  new Date(d).toLocaleDateString("en-GB", {
    day: "2-digit",
    month: "short",
    year: "numeric",
  });
---

<BaseLayout title="Updates | The Capstone Program">
  <!-- Premium Hero -->
  <section class="relative bg-capBlack text-white overflow-hidden">
    <!-- Blue premium glow -->
    <div class="pointer-events-none absolute -top-40 -left-40 h-[480px] w-[480px] rounded-full bg-capBlue/25 blur-3xl"></div>
    <div class="pointer-events-none absolute -bottom-44 -right-40 h-[520px] w-[520px] rounded-full bg-capBlue/15 blur-3xl"></div>

    <!-- Bottom fade -->
    <div class="pointer-events-none absolute bottom-0 left-0 right-0 h-24 bg-gradient-to-b from-transparent via-black/10 to-white/5"></div>

    <div class="mx-auto max-w-6xl px-4 pt-16 pb-36 md:pt-20 md:pb-44">
      <p class="text-[11px] font-semibold tracking-[0.22em] text-white/60 uppercase">
        Updates
      </p>

      <h1 class="mt-4 text-4xl font-semibold leading-tight md:text-6xl md:leading-tight">
        Announcements & Updates
      </h1>

      <p class="mt-5 max-w-3xl text-sm md:text-base text-white/80 leading-relaxed">
        Program updates, webinars, and community announcements. This page stays active even outside cohorts.
      </p>

      <div class="mt-10 flex flex-wrap gap-3">
        <a
          href={s.waitlist === "WAITLIST_FORM_URL_TBD" ? "/apply" : s.waitlist}
          class="rounded-2xl bg-capBlue px-6 py-3 text-sm font-semibold text-white shadow hover:opacity-95"
        >
          Join Waitlist
        </a>

        <a
          href="/program"
          class="rounded-2xl border border-white/20 bg-white/5 px-6 py-3 text-sm font-semibold text-white hover:bg-white/10"
        >
          Explore Program
        </a>
      </div>
    </div>
  </section>

  <!-- Content -->
  <section class="mx-auto max-w-6xl px-4 -mt-20 pb-16 md:pb-24">
    <div class="rounded-[36px] border border-black/10 bg-white shadow-[0_30px_80px_rgba(0,0,0,0.12)] overflow-hidden">
      <div class="px-6 py-10 md:px-10 md:py-12">
        <div class="flex flex-wrap items-end justify-between gap-4">
          <div>
            <h2 class="text-2xl font-semibold md:text-3xl text-capBlack">Latest</h2>
            <p class="mt-2 text-sm text-capText/70 max-w-2xl">
              This section grows automatically whenever you publish new updates in the Admin panel.
            </p>
          </div>
        </div>

        <div class="mt-10 grid gap-6 md:grid-cols-2">
          {sorted.length > 0 ? (
            sorted.map((u) => (
              <a
                href={"/updates/" + u.slug + "/"}
                class="group block rounded-3xl border border-black/10 bg-white p-6 shadow-sm transition hover:-translate-y-0.5 hover:shadow-md"
              >
                <div class="flex items-center justify-between gap-4">
                  <p class="text-xs font-semibold tracking-wider text-capText/50 uppercase">
                    {u.data.tag ?? "Update"}
                  </p>
                  {u.data.date && (
                    <span class="text-xs font-medium text-capText/40">
                      {formatDate(u.data.date)}
                    </span>
                  )}
                </div>

                <h3 class="mt-4 text-xl font-semibold text-capBlack group-hover:opacity-90">
                  {u.data.title}
                </h3>

                <p class="mt-2 text-sm text-capText/70 leading-relaxed">
                  {u.data.summary ? u.data.summary : "No summary provided."}
                </p>

                <div class="mt-6 flex items-center justify-between">
                  <p class="text-xs font-semibold text-capText/50">The Capstone Program</p>
                  <span class="text-xs font-semibold text-capBlue">
                    Read More â†’
                  </span>
                </div>
              </a>
            ))
          ) : (
            <div class="rounded-3xl border border-black/10 bg-white p-6 shadow-sm">
              <h3 class="text-xl font-semibold">No updates published yet</h3>
              <p class="mt-2 text-sm text-capText/70 leading-relaxed">
                Go to the Admin panel and publish your first update.
              </p>
            </div>
          )}
        </div>
      </div>
    </div>
  </section>
</BaseLayout>




