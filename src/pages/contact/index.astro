---
import BaseLayout from "../../layouts/BaseLayout.astro";
import { getSettings } from "../../lib/settings";
const s = getSettings();
---

<BaseLayout title="Contact | The Capstone Program">
  <section class="bg-capBlack text-white cap-hero">
    <div class="mx-auto max-w-6xl px-4 py-20">
      <p class="text-xs font-semibold tracking-widest text-white/60">CONTACT</p>

      <h1 class="mt-3 text-4xl font-bold md:text-6xl">
        Letâ€™s connect
      </h1>

      <p class="mt-5 max-w-2xl text-base text-white/80 md:text-lg">
        For partnerships, mentorship interest, speaking opportunities, or general questions, reach out.
      </p>

      <div class="mt-10 cap-hero-actions btn-row">
        <a
          href={s.waitlist === "WAITLIST_FORM_URL_TBD" ? "/apply" : s.waitlist}
          class="rounded-xl bg-capBlue px-5 py-3 text-sm font-semibold text-white shadow hover:opacity-95"
        >
          Join Waitlist
        </a>

        <a
          href="/mentors"
          class="rounded-xl border border-white/20 bg-white/5 px-5 py-3 text-sm font-semibold text-white hover:bg-white/10"
        >
          Mentors
        </a>
      </div>
    </div>
  </section>

  <section class="mx-auto max-w-6xl px-4 pb-20 cap-section">
    <div class="grid gap-6 md:grid-cols-3">
      <div class="rounded-2xl border border-black/10 bg-white p-7 shadow-sm">
        <p class="text-xs font-semibold tracking-widest text-black/60">EMAIL</p>
        <p class="mt-3 font-semibold">hassanalamcontact@gmail.com</p>
      </div>

      <a
        href="https://www.instagram.com/thecapstoneprogram/"
        target="_blank"
        class="rounded-2xl border border-black/10 bg-white p-7 shadow-sm hover:bg-black/5"
      >
        <p class="text-xs font-semibold tracking-widest text-black/60">INSTAGRAM</p>
        <p class="mt-3 font-semibold">@thecapstoneprogram</p>
      </a>

      <a
        href="https://www.linkedin.com/company/the-capstone-program/"
        target="_blank"
        class="rounded-2xl border border-black/10 bg-white p-7 shadow-sm hover:bg-black/5"
      >
        <p class="text-xs font-semibold tracking-widest text-black/60">LINKEDIN</p>
        <p class="mt-3 font-semibold">The Capstone Program</p>
      </a>
    </div>

    <div class="mt-14 rounded-3xl bg-capBlack px-6 py-10 text-white md:px-10">
      <h3 class="text-2xl font-bold md:text-3xl">
        Want to collaborate with Capstone?
      </h3>
      <p class="mt-2 max-w-2xl text-sm text-white/70 md:text-base">
        If you represent a company, community, or want to support this initiative, we would love to connect.
      </p>

      <div class="mt-8 flex flex-wrap gap-3">
        <a
          href="mailto:hassanalamcontact@gmail.com"
          class="rounded-xl bg-capBlue px-5 py-3 text-sm font-semibold text-white shadow hover:opacity-95"
        >
          Email Us
        </a>

        <a
          href="/updates"
          class="rounded-xl border border-white/20 bg-white/5 px-5 py-3 text-sm font-semibold text-white hover:bg-white/10"
        >
          View Updates
        </a>
      </div>
    </div>
  </section>
</BaseLayout>
