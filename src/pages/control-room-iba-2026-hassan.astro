---
export const prerender = true;

const repo = "Hassan-Alam-Cloud/capstone-program-site";
const branch = "main";

// ‚úÖ GitHub folder links
const githubMentors = `https://github.com/${repo}/tree/${branch}/src/content/mentors`;
const githubUpdates = `https://github.com/${repo}/tree/${branch}/src/content/updates`;
const githubFaqs = `https://github.com/${repo}/tree/${branch}/src/content/faq`;
const githubUploads = `https://github.com/${repo}/tree/${branch}/public/images/uploads`;

// ‚úÖ Create new files directly (super clean)
const githubNewMentor =
  `https://github.com/${repo}/new/${branch}/src/content/mentors?filename=new-mentor.md`;

const githubNewUpdate =
  `https://github.com/${repo}/new/${branch}/src/content/updates?filename=new-update.md`;

// ‚úÖ Safety links
const githubRepoSettings = `https://github.com/${repo}/settings`;
const githubPages = `https://dash.cloudflare.com/`;
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width,initial-scale=1" />
    <title>Control Room | The Capstone Program</title>

    <style>
      :root {
        --bg: #0b1220;
        --card: rgba(255, 255, 255, 0.06);
        --card2: rgba(255, 255, 255, 0.04);
        --stroke: rgba(255, 255, 255, 0.12);
        --text: rgba(255, 255, 255, 0.92);
        --muted: rgba(255, 255, 255, 0.60);
        --blue: #3b82f6;
        --green: #22c55e;
        --yellow: #facc15;
      }

      body {
        margin: 0;
        font-family: ui-sans-serif, system-ui, -apple-system, Segoe UI, Roboto, Arial;
        background: radial-gradient(900px 600px at 10% 10%, rgba(59, 130, 246, 0.22), transparent),
          radial-gradient(700px 500px at 70% 20%, rgba(34, 197, 94, 0.12), transparent),
          var(--bg);
        color: var(--text);
      }

      .wrap {
        max-width: 1100px;
        margin: 48px auto;
        padding: 0 20px;
      }

      .top {
        display: flex;
        align-items: center;
        justify-content: space-between;
        gap: 18px;
        margin-bottom: 24px;
      }

      .title {
        margin: 0;
        font-size: 34px;
        letter-spacing: -0.02em;
      }

      .sub {
        margin: 6px 0 0 0;
        color: var(--muted);
        font-size: 14px;
      }

      .pill {
        padding: 10px 14px;
        background: rgba(34, 197, 94, 0.13);
        border: 1px solid rgba(34, 197, 94, 0.25);
        border-radius: 999px;
        font-size: 13px;
        color: rgba(255, 255, 255, 0.92);
        white-space: nowrap;
      }

      .grid {
        display: grid;
        grid-template-columns: repeat(12, 1fr);
        gap: 16px;
      }

      .card {
        background: linear-gradient(180deg, var(--card), var(--card2));
        border: 1px solid var(--stroke);
        border-radius: 16px;
        padding: 18px;
        box-shadow: 0 16px 48px rgba(0, 0, 0, 0.35);
      }

      .card h2 {
        margin: 0 0 6px 0;
        font-size: 18px;
      }

      .card p {
        margin: 0 0 14px 0;
        color: var(--muted);
        font-size: 13px;
        line-height: 1.45;
      }

      .btns {
        display: flex;
        flex-wrap: wrap;
        gap: 10px;
      }

      .btn {
        display: inline-flex;
        align-items: center;
        gap: 10px;
        padding: 10px 12px;
        border-radius: 12px;
        text-decoration: none;
        color: white;
        border: 1px solid var(--stroke);
        background: rgba(255, 255, 255, 0.06);
        font-size: 13px;
        transition: transform 0.08s ease, background 0.2s ease;
      }

      .btn:hover {
        transform: translateY(-1px);
        background: rgba(255, 255, 255, 0.10);
      }

      .primary {
        border-color: rgba(59, 130, 246, 0.38);
        background: rgba(59, 130, 246, 0.16);
      }

      .good {
        border-color: rgba(34, 197, 94, 0.40);
        background: rgba(34, 197, 94, 0.14);
      }

      .warn {
        border-color: rgba(250, 204, 21, 0.45);
        background: rgba(250, 204, 21, 0.12);
        color: rgba(255, 255, 255, 0.92);
      }

      .col-7 { grid-column: span 7; }
      .col-5 { grid-column: span 5; }
      .col-6 { grid-column: span 6; }
      .col-12 { grid-column: span 12; }

      .footer {
        margin-top: 22px;
        font-size: 12px;
        color: rgba(255, 255, 255, 0.45);
      }

      @media (max-width: 900px) {
        .col-7, .col-5, .col-6 { grid-column: span 12; }
        .top { flex-direction: column; align-items: flex-start; }
      }
    </style>
  </head>

  <body>
    <div class="wrap">
      <div class="top">
        <div>
          <h1 class="title">Control Room ‚Äî The Capstone Program</h1>
          <p class="sub">
            Hidden admin dashboard. Edit content using GitHub (stable & free).
          </p>
        </div>

        <div class="pill">‚úÖ Status: Live ‚Ä¢ Access Protected</div>
      </div>

      <div class="grid">
        <!-- ‚úÖ Quick Actions -->
        <section class="card col-7">
          <h2>Quick Actions (No Coding)</h2>
          <p>These open the exact folders you need in GitHub.</p>

          <div class="btns">
            <a class="btn primary" href={githubMentors} target="_blank" rel="noreferrer">
              üë§ Mentors content
            </a>

            <a class="btn primary" href={githubUpdates} target="_blank" rel="noreferrer">
              üì¢ Updates content
            </a>

            <a class="btn good" href={githubUploads} target="_blank" rel="noreferrer">
              üñº Upload images
            </a>

            <a class="btn primary" href={githubFaqs} target="_blank" rel="noreferrer">
              ‚ùì FAQs content
            </a>

            <a class="btn good" href={githubNewMentor} target="_blank" rel="noreferrer">
              ‚ûï Create Mentor (New)
            </a>

            <a class="btn good" href={githubNewUpdate} target="_blank" rel="noreferrer">
              ‚ûï Create Update (New)
            </a>
          </div>
        </section>

        <!-- ‚úÖ Mentors -->
        <section class="card col-5">
          <h2>Mentors</h2>
          <p>Add new mentors or update bios, tags, LinkedIn etc.</p>

          <div class="btns">
            <a class="btn good" href={githubNewMentor} target="_blank" rel="noreferrer">
              ‚ûï Add New Mentor
            </a>

            <a class="btn primary" href={githubMentors} target="_blank" rel="noreferrer">
              üìÅ Manage Mentors
            </a>
          </div>
        </section>

        <!-- ‚úÖ Updates -->
        <section class="card col-6">
          <h2>Updates / Announcements</h2>
          <p>Add new announcements and edit existing posts.</p>

          <div class="btns">
            <a class="btn good" href={githubNewUpdate} target="_blank" rel="noreferrer">
              ‚ûï Add New Update
            </a>

            <a class="btn primary" href={githubUpdates} target="_blank" rel="noreferrer">
              üìÅ Manage Updates
            </a>
          </div>
        </section>

        <!-- ‚úÖ Image Upload -->
        <section class="card col-6">
          <h2>Images Uploads</h2>
          <p>Upload mentor images and program assets (no CMS upload needed).</p>

          <div class="btns">
            <a class="btn good" href={githubUploads} target="_blank" rel="noreferrer">
              ‚¨Ü Upload Images
            </a>

            <a class="btn primary" href={githubUploads} target="_blank" rel="noreferrer">
              üìÅ View Uploads Folder
            </a>
          </div>
        </section>

        <!-- ‚úÖ Safety -->
        <section class="card col-12">
          <h2>Safety</h2>
          <p>
            This page is hidden but NOT ‚Äúsecure‚Äù. Don‚Äôt share the URL publicly.
            If you want real security, we can add Cloudflare Access.
          </p>

          <div class="btns">
            <a class="btn warn" href={githubRepoSettings} target="_blank" rel="noreferrer">
              üîí Repo Settings
            </a>

            <a class="btn warn" href={githubPages} target="_blank" rel="noreferrer">
              ‚òÅ Cloudflare Dashboard
            </a>
          </div>
        </section>
      </div>

      <div class="footer">
        Admin URL: /control-room-iba-2026-hassan
      </div>
    </div>
  </body>
</html>