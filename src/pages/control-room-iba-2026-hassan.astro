---
const repo = "Hassan-Alam-Cloud/capstone-program-site";
const branch = "main";

// Content folders (Astro content)
const updatesFolder = "src/content/updates";
const mentorsFolder = "src/content/mentors";
const faqFolder = "src/content/faq";
const cohortsFolder = "src/content/cohorts";

// Image uploads folder
const uploadsFolder = "public/images/uploads";

// Helpers for GitHub URLs
const gh = {
  folder: (path: string) =>
    `https://github.com/${repo}/tree/${branch}/${path}`,
  newFile: (path: string) =>
    `https://github.com/${repo}/new/${branch}/${path}`,
  upload: (path: string) =>
    `https://github.com/${repo}/upload/${branch}/${path}`,
};
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>Control Room | The Capstone Program</title>
    <style>
      :root {
        --bg: #070a12;
        --card: rgba(255, 255, 255, 0.06);
        --border: rgba(255, 255, 255, 0.12);
        --text: rgba(255, 255, 255, 0.92);
        --muted: rgba(255, 255, 255, 0.70);
        --accent: rgba(140, 200, 255, 0.95);
      }
      body {
        margin: 0;
        font-family: ui-sans-serif, system-ui, -apple-system, Segoe UI, Roboto, Arial;
        background: radial-gradient(1200px 700px at 10% 5%, rgba(120, 150, 255, 0.20), transparent),
                    radial-gradient(900px 600px at 80% 0%, rgba(50, 255, 180, 0.08), transparent),
                    var(--bg);
        color: var(--text);
      }
      .wrap {
        max-width: 1050px;
        margin: 0 auto;
        padding: 40px 18px 70px;
      }
      .top {
        display: flex;
        justify-content: space-between;
        gap: 16px;
        flex-wrap: wrap;
        align-items: center;
        margin-bottom: 22px;
      }
      h1 {
        margin: 0;
        font-size: 26px;
        letter-spacing: 0.2px;
      }
      .sub {
        color: var(--muted);
        margin-top: 6px;
        font-size: 14px;
      }
      .pill {
        display: inline-flex;
        padding: 8px 10px;
        border: 1px solid var(--border);
        border-radius: 999px;
        font-size: 12px;
        color: var(--muted);
        background: rgba(0,0,0,0.25);
      }
      .grid {
        display: grid;
        grid-template-columns: repeat(12, 1fr);
        gap: 14px;
        margin-top: 16px;
      }
      .card {
        grid-column: span 6;
        border: 1px solid var(--border);
        border-radius: 16px;
        background: var(--card);
        padding: 16px;
        backdrop-filter: blur(10px);
      }
      @media (max-width: 760px) { .card { grid-column: span 12; } }
      .card h2 {
        margin: 0 0 8px;
        font-size: 16px;
      }
      .card p {
        margin: 0 0 12px;
        color: var(--muted);
        font-size: 13px;
        line-height: 1.5;
      }
      .btns {
        display: flex;
        gap: 10px;
        flex-wrap: wrap;
      }
      a.btn {
        text-decoration: none;
        display: inline-flex;
        gap: 8px;
        align-items: center;
        padding: 10px 12px;
        border-radius: 10px;
        border: 1px solid var(--border);
        background: rgba(0,0,0,0.35);
        color: var(--text);
        font-size: 13px;
      }
      a.btn:hover { border-color: rgba(255,255,255,0.25); }
      .primary {
        border-color: rgba(140,200,255,0.45) !important;
        box-shadow: 0 0 0 2px rgba(140,200,255,0.08);
      }
      .danger {
        border-color: rgba(255, 80, 80, 0.35) !important;
      }
      .footer {
        margin-top: 22px;
        color: rgba(255,255,255,0.55);
        font-size: 12px;
      }
      code {
        background: rgba(0,0,0,0.35);
        border: 1px solid rgba(255,255,255,0.14);
        padding: 2px 6px;
        border-radius: 8px;
        font-size: 12px;
      }
    </style>
  </head>

  <body>
    <div class="wrap">
      <div class="top">
        <div>
          <h1>Control Room ‚Äî The Capstone Program</h1>
          <div class="sub">
            Hidden admin dashboard. Edit content using GitHub (stable & free).
          </div>
        </div>
        <div class="pill">
          Repo: {repo} ‚Ä¢ Branch: {branch}
        </div>
      </div>

      <div class="grid">
        <div class="card">
          <h2>Updates / Announcements</h2>
          <p>Add new announcements and edit existing posts.</p>
          <div class="btns">
            <a class="btn primary" href={gh.newFile(updatesFolder)} target="_blank">‚ûï Add New Update</a>
            <a class="btn" href={gh.folder(updatesFolder)} target="_blank">üìù Manage Updates</a>
          </div>
        </div>

        <div class="card">
          <h2>Mentors</h2>
          <p>Add new mentors or update bios, tags, LinkedIn etc.</p>
          <div class="btns">
            <a class="btn primary" href={gh.newFile(mentorsFolder)} target="_blank">‚ûï Add New Mentor</a>
            <a class="btn" href={gh.folder(mentorsFolder)} target="_blank">üìù Manage Mentors</a>
          </div>
        </div>

        <div class="card">
          <h2>Images Uploads</h2>
          <p>Upload mentor images and program assets (no CMS upload needed).</p>
          <div class="btns">
            <a class="btn primary" href={gh.upload(uploadsFolder)} target="_blank">‚¨ÜÔ∏è Upload Images</a>
            <a class="btn" href={gh.folder(uploadsFolder)} target="_blank">üóÇ View Uploads Folder</a>
          </div>
        </div>

        <div class="card">
          <h2>FAQs</h2>
          <p>Edit FAQ content files.</p>
          <div class="btns">
            <a class="btn" href={gh.folder(faqFolder)} target="_blank">üìù Manage FAQs</a>
          </div>
        </div>

        <div class="card">
          <h2>Cohorts</h2>
          <p>Manage cohorts, eligibility, and application cycles.</p>
          <div class="btns">
            <a class="btn" href={gh.folder(cohortsFolder)} target="_blank">üìù Manage Cohorts</a>
          </div>
        </div>

        <div class="card">
          <h2>‚ö†Ô∏è Safety</h2>
          <p>
            This page is hidden but NOT ‚Äúsecured‚Äù. Don‚Äôt share this URL publicly.
            If you want real security later we can add Cloudflare Access.
          </p>
          <div class="btns">
            <a class="btn danger" href={`https://github.com/${repo}/settings`} target="_blank">üîí Repo Settings</a>
          </div>
        </div>
      </div>

      <div class="footer">
        Admin URL: <code>/control-room-iba-2026-hassan</code>
      </div>
    </div>
  </body>
</html>