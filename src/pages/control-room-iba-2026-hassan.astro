export const prerender = true;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>Control Room | The Capstone Program</title>
  </head>

  <body style="margin:0; font-family: system-ui, -apple-system, Segoe UI, Roboto, Arial, sans-serif; background:#0b1220; color:#e5e7eb;">

    <div style="max-width:1100px; margin:0 auto; padding:40px 20px;">
      <h1 style="font-size:44px; margin:0 0 10px;">Capstone Control Room</h1>
      <p style="margin:0 0 28px; color:#cbd5e1;">
        If you see this page, Astro routing + deployment is correct.
      </p>

      <div style="display:grid; grid-template-columns: repeat(auto-fit, minmax(260px, 1fr)); gap:16px;">
        <div style="background:rgba(255,255,255,0.06); border:1px solid rgba(255,255,255,0.10); border-radius:16px; padding:18px;">
          <h2 style="margin:0 0 8px; font-size:18px;">Updates</h2>
          <p style="margin:0 0 12px; color:#cbd5e1;">Manage announcements in GitHub.</p>
          <a href="https://github.com/Hassan-Alam-Cloud/capstone-program-site/tree/main/src/content/updates"
             target="_blank"
             style="display:inline-block; padding:10px 14px; border-radius:12px; background:#3b82f6; color:white; text-decoration:none; font-weight:700;">
            Open Updates Folder
          </a>
        </div>

        <div style="background:rgba(255,255,255,0.06); border:1px solid rgba(255,255,255,0.10); border-radius:16px; padding:18px;">
          <h2 style="margin:0 0 8px; font-size:18px;">Mentors</h2>
          <p style="margin:0 0 12px; color:#cbd5e1;">Add/edit mentors in GitHub.</p>
          <a href="https://github.com/Hassan-Alam-Cloud/capstone-program-site/tree/main/src/content/mentors"
             target="_blank"
             style="display:inline-block; padding:10px 14px; border-radius:12px; background:#22c55e; color:#04110a; text-decoration:none; font-weight:800;">
            Open Mentors Folder
          </a>
        </div>

        <div style="background:rgba(255,255,255,0.06); border:1px solid rgba(255,255,255,0.10); border-radius:16px; padding:18px;">
          <h2 style="margin:0 0 8px; font-size:18px;">Uploads</h2>
          <p style="margin:0 0 12px; color:#cbd5e1;">Upload mentor images in GitHub.</p>
          <a href="https://github.com/Hassan-Alam-Cloud/capstone-program-site/tree/main/public/images/uploads"
             target="_blank"
             style="display:inline-block; padding:10px 14px; border-radius:12px; background:#eab308; color:#111827; text-decoration:none; font-weight:800;">
            Open Uploads Folder
          </a>
        </div>
      </div>
    </div>
  </body>
</html>