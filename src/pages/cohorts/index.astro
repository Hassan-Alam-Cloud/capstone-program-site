---
import BaseLayout from "../../layouts/BaseLayout.astro";
import { getSettings } from "../../lib/settings";
const s = getSettings();
---

<BaseLayout title="Cohorts | The Capstone Program">
  <!-- HERO -->
  <section class="bg-capBlack text-white cap-hero">
    <div class="mx-auto max-w-6xl px-4 py-20">
      <p class="text-xs font-semibold tracking-widest text-white/60">COHORTS</p>

      <h1 class="mt-3 text-4xl font-bold md:text-6xl">
        Cohorts and timeline
      </h1>

      <p class="mt-5 max-w-2xl text-base text-white/80 md:text-lg">
        Capstone runs in cohorts. We open applications twice a year and keep students engaged with updates
        and opportunities beyond the cohort.
      </p>

      <div class="mt-10 cap-hero-actions btn-row">
        <a
          href={s.waitlist === "WAITLIST_FORM_URL_TBD" ? "/apply" : s.waitlist}
          class="rounded-xl bg-capBlue px-5 py-3 text-sm font-semibold text-white shadow hover:opacity-95"
        >
          Join Waitlist
        </a>

        <a
          href="/updates"
          class="rounded-xl border border-white/20 bg-white/5 px-5 py-3 text-sm font-semibold text-white hover:bg-white/10"
        >
          View Updates
        </a>
      </div>
    </div>
  </section>

  <!-- CONTENT -->
  <section class="mx-auto max-w-6xl px-4 pb-20 cap-section">
    <h2 class="text-2xl font-bold md:text-3xl">Upcoming cohort</h2>
    <p class="mt-2 max-w-3xl text-sm text-black/60">
      Dates will be announced here. Join the waitlist to be notified when applications open.
    </p>

    <div class="mt-10 grid gap-6 md:grid-cols-2">
      <div class="rounded-2xl border border-black/10 bg-white p-7 shadow-sm">
        <p class="text-xs font-semibold tracking-widest text-black/60">APPLICATIONS</p>
        <h3 class="mt-4 text-xl font-bold">Applications open</h3>
        <p class="mt-2 text-sm text-black/60">TBD</p>
      </div>

      <div class="rounded-2xl border border-black/10 bg-white p-7 shadow-sm">
        <p class="text-xs font-semibold tracking-widest text-black/60">DEADLINE</p>
        <h3 class="mt-4 text-xl font-bold">Application deadline</h3>
        <p class="mt-2 text-sm text-black/60">TBD</p>
      </div>

      <div class="rounded-2xl border border-black/10 bg-white p-7 shadow-sm">
        <p class="text-xs font-semibold tracking-widest text-black/60">DECISIONS</p>
        <h3 class="mt-4 text-xl font-bold">Decisions announced</h3>
        <p class="mt-2 text-sm text-black/60">TBD</p>
      </div>

      <div class="rounded-2xl border border-black/10 bg-white p-7 shadow-sm">
        <p class="text-xs font-semibold tracking-widest text-black/60">PROGRAM</p>
        <h3 class="mt-4 text-xl font-bold">Cohort starts</h3>
        <p class="mt-2 text-sm text-black/60">TBD</p>
      </div>
    </div>

    <!-- CTA -->
    <div class="mt-14 rounded-3xl bg-capBlack px-6 py-10 text-white md:px-10">
      <h3 class="text-2xl font-bold md:text-3xl">
        Want to be considered for the next cohort?
      </h3>
      <p class="mt-2 max-w-2xl text-sm text-white/70 md:text-base">
        Join the waitlist to receive cohort announcements and early application updates.
      </p>

      <div class="mt-8 flex flex-wrap gap-3">
        <a
          href={s.waitlist === "WAITLIST_FORM_URL_TBD" ? "/apply" : s.waitlist}
          class="rounded-xl bg-capBlue px-5 py-3 text-sm font-semibold text-white shadow hover:opacity-95"
        >
          Join Waitlist
        </a>

        <a
          href="/contact"
          class="rounded-xl border border-white/20 bg-white/5 px-5 py-3 text-sm font-semibold text-white hover:bg-white/10"
        >
          Contact
        </a>
      </div>
    </div>
  </section>
</BaseLayout>
