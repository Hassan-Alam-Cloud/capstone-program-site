---
import BaseLayout from "../../layouts/BaseLayout.astro";
import { getCollection } from "astro:content";
import { getSettings } from "../../lib/settings";

const s = getSettings();

// Load all FAQ markdown files
const faqs = await getCollection("faq");

// Sort by filename (faq-1, faq-2...) so order stays clean
faqs.sort((a, b) => a.slug.localeCompare(b.slug));
---

<BaseLayout title={`FAQ | ${s.programName}`}>
  {/* HERO */}
  <section class="cap-hero bg-capBlack text-white">
    <div class="mx-auto max-w-6xl px-4 pt-20">
      <p class="text-xs font-semibold tracking-widest text-white/60">
        FAQ
      </p>

      <h1 class="mt-3 text-4xl font-bold md:text-5xl">
        Frequently asked questions
      </h1>

      <p class="mt-4 max-w-2xl text-lg text-white/80">
        Clear answers about eligibility, format, cohorts, and how Capstone works.
      </p>

      <div class="cap-hero-actions mt-8 flex flex-wrap gap-3">
        <a
          href={s.waitlist === "WAITLIST_FORM_URL_TBD" ? "/apply" : s.waitlist}
          class="rounded-xl bg-capBlue px-5 py-3 text-sm font-semibold text-white shadow hover:opacity-95"
        >
          {s.primaryCtaLabel}
        </a>

        <a
          href="/program"
          class="rounded-xl border border-white/20 bg-white/5 px-5 py-3 text-sm font-semibold text-white hover:bg-white/10"
        >
          Explore Program
        </a>
      </div>
    </div>

    {/* Smooth fade edge */}
    <div class="h-10 bg-gradient-to-b from-capBlack to-white"></div>
  </section>

  {/* CONTENT */}
  <section class="cap-section bg-white">
    <div class="mx-auto max-w-6xl px-4 pb-16">
      <div class="grid gap-6 md:grid-cols-2">
        {faqs.map((item) => (
          <article class="rounded-2xl border border-black/10 bg-white p-6 shadow-sm hover:shadow-md transition">
            <h2 class="text-lg font-semibold text-capBlack">
              {item.data.question}
            </h2>

            <p class="mt-3 text-sm leading-relaxed text-black/70 whitespace-pre-line">
              {item.data.answer}
            </p>
          </article>
        ))}
      </div>

      {/* CTA Card */}
      <div class="mt-12 overflow-hidden rounded-3xl bg-capBlack text-white">
        <div class="p-8 md:p-12">
          <h3 class="text-2xl font-bold md:text-3xl">
            Still have a question?
          </h3>

          <p class="mt-3 max-w-2xl text-white/80">
            If you want to partner with us, volunteer as a mentor, or have a special case â€” reach out.
          </p>

          <div class="mt-6 flex flex-wrap gap-3">
            <a
              href="/contact"
              class="rounded-xl bg-capBlue px-5 py-3 text-sm font-semibold text-white shadow hover:opacity-95"
            >
              Contact us
            </a>

            <a
              href="/updates"
              class="rounded-xl border border-white/20 bg-white/5 px-5 py-3 text-sm font-semibold text-white hover:bg-white/10"
            >
              View updates
            </a>
          </div>
        </div>
      </div>
    </div>
  </section>
</BaseLayout>

